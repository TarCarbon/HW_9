<persistence-unit name="yourPersistenceUnitName" transaction-type="RESOURCE_LOCAL">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.example.Entity.Building</class>
    <class>org.example.Entity.Resident</class>

    <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        <property name="hibernate.show_sql" value="true"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>

        <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/db/db"/>
        <property name="javax.persistence.jdbc.user" value="user"/>
        <property name="javax.persistence.jdbc.password" value="password"/>
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
    </properties>
</persistence-unit>
